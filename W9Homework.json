{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 400,
  "projection": {"type": "mercator", "center": [110, 4]},
  "view": {"stroke": "#cccccc", "strokeWidth": 0.5, "fill": "#eef6fb"},
  "layer": [
    {
      "data": {
        "url": "https://x1aoy6ng.github.io/FIT3179Week9Homework/output.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_1"}
      },
      "mark": {"type": "geoshape", "stroke": "#cccccc", "strokeWidth": 0.5}
    },
    {
      "data": {
        "url": "https://x1aoy6ng.github.io/FIT3179Week9Homework/output.json",
        "format": {"type": "topojson", "feature": "my"}
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://x1aoy6ng.github.io/FIT3179Week9Homework/malaysia_state_sex_filter.csv"
            },
            "key": "state",
            "fields": [ "unemployment_rate_percentage", "year"]
          }
        },
        {
          "filter": "datum.year == 2020"
        },
        {
          "window": [
            {"op": "min", "field": "unemployment_rate_percentage", "as": "min_rate"},
            {"op": "max", "field": "unemployment_rate_percentage", "as": "max_rate"}
          ],
          "frame": [null, null]
        },
        {
          "calculate": "(datum.unemployment_rate_percentage - datum.min_rate) / (datum.max_rate - datum.min_rate)",
          "as": "unemployment_rate_normalised"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "#454545", "strokeWidth": 1},
      "encoding": {
        "color": {
          "field": "unemployment_rate_normalised",
          "type": "quantitative",
          "title": "Unemployment Rate (%)",
          "scale" : {
            "type": "linear",
            "domain" : [0, 0.25, 0.5, 0.75, 1],
            "range" : ["#d3f2a4", "#8eda95", "#5fb086", "#35857d", "#136069"]
          },
          "legend": {
            "title": "Unemployment rate (Normalised)",
            "orient": "right",
            "offset": 30
          }
        },
        "tooltip": [
          {"field": "properties.name", "type": "nominal", "title": "State"},
          {"field": "year", "type": "ordinal", "title": "Year"},
          {"field": "unemployment_rate_percentage", "type": "quantitative", "title": "Unemployment Rate (%)"}
        ]
      }
    }
  ]
}
